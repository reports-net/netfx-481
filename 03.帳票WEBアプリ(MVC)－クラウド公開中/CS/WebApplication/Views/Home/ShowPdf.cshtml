@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>PDF Viewer</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }

        iframe {
            border: none;
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    <iframe src="@Url.Action("GetPdfStream", new { ReportsKind = ViewBag.ReportsKind })"></iframe>
</body>
</html>