<Window x:Class="Sample.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report.net 帳票作成WEB API 呼び出し ＋ 帳票データ取得後、帳票出力 サンプル" 
        Height="700" Width="900" 
        WindowStartupLocation="CenterScreen"
        Background="#F8F8F8">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border x:Name="borderDesignSelection" Grid.Row="0" Background="#FFFFFF" BorderBrush="#CCCCCC" 
        BorderThickness="1" CornerRadius="4" MaxWidth="1000" Margin="0,0,0,15">
            <StackPanel Margin="15,15">
                <TextBlock Text="帳票作成依頼する WEB API が配置されている、ローカルサーバ または クラウドを選択してくさい。" FontSize="12" Foreground="#666666" Margin="0,0,0,8"/>
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton x:Name="radLocal" Content="ローカルデバッグ環境"
                 GroupName="DesignGroup" IsChecked="True"
                 Margin="0,0,20,0" FontSize="16" Padding="5,3"/>
                    <RadioButton x:Name="radAzureWin" Content="Azure Windows Server"
                 GroupName="DesignGroup"
                 Margin="0,0,10,0" FontSize="16" Padding="5,3"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- 帳票タイプ選択コンボボックス（大きく目立つデザイン） -->
        <Border Grid.Row="1" Background="#FFFFFF" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15">
            <StackPanel Margin="15,10">
                <TextBlock Text="出力帳票を選択してください" FontSize="12" Foreground="#666666" Margin="0,0,0,8"/>
                <ComboBox x:Name="cmbReportType" FontSize="14" Padding="10,8" Height="40">
                    <ComboBoxItem Content="単純な印刷データ" IsSelected="True"/>
                    <ComboBoxItem Content="10の倍数"/>
                    <ComboBoxItem Content="郵便番号一覧"/>
                    <ComboBoxItem Content="見積書"/>
                    <ComboBoxItem Content="請求書"/>
                    <ComboBoxItem Content="商品大小分類"/>
                    <ComboBoxItem Content="広告"/>
                </ComboBox>
            </StackPanel>
        </Border>


        <!-- 出力タイプ選択（ラジオボタン） -->
        <Border Grid.Row="2" Background="#FFFFFF" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15">
            <StackPanel Margin="15,15">
                <TextBlock Text="出力方法を選択してください" FontSize="12" Foreground="#666666" Margin="0,0,0,12" 
                  HorizontalAlignment="Center"/>
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton x:Name="radPreview" Content="プレビュー" 
                        GroupName="OutputGroup" IsChecked="True" 
                        Margin="0,0,30,0" FontSize="16" Padding="5,3"/>
                    <RadioButton x:Name="radPrint" Content="印刷" 
                        GroupName="OutputGroup" 
                        Margin="0,0,30,0" FontSize="16" Padding="5,3"/>
                    <RadioButton x:Name="radPDF" Content="PDF出力" 
                        GroupName="OutputGroup" 
                        Margin="0,0,30,0" FontSize="16" Padding="5,3"/>
                    <RadioButton x:Name="radSVG" Content="SVG出力" 
                        GroupName="OutputGroup" 
                        Margin="0,0,30,0" FontSize="16" Padding="5,3"/>
                    <RadioButton x:Name="radXPS" Content="XPS出力" 
                        GroupName="OutputGroup" 
                        Margin="0,0,0,0" FontSize="16" Padding="5,3"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- 実行ボタン -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button Content="実行(POST)" Width="120"
            Background="#4B5F83" Foreground="White"
            FontSize="14" FontWeight="SemiBold"
            BorderThickness="0" Margin="0,0,60,0"
            Click="ExecutePost_Click" Height="42"/>
            <Button Content="実行(GET)" Width="120"
            Background="#4B5F83" Foreground="White"
            FontSize="14" FontWeight="SemiBold"
            BorderThickness="0"
            Click="ExecuteGet_Click" Height="42"/>
        </StackPanel>


        <!-- サンプルプログラム説明テキスト1 -->
        <Border Grid.Row="4" Background="Gray" BorderBrush="#0000C0"  
        BorderThickness="1" CornerRadius="4" Margin="0,0,0,4">
            <TextBox x:Name="txtMessage1" 
         IsReadOnly="True" 
         Foreground="White"
         Text="
  1. このプログラム→(印刷データ作成依頼)→サーバサイド(WEB API)&#x0A;
  2. サーバサイド(WEB API)→(印刷データ)→このプログラム→帳票出力&#x0A;
  という流れになります。&#x0A;
  &#x0A;
  このプログラムは WPF のプログラムですが、Windows Form版も同時にご利用いただけます。&#x0A;
  &#x0A;
  デフォルトでは、ソリューションのマルチプルスタートアップ設定により、F5キーを押すことで&#x0A;
  「WebApi」「Windows Form版クライアント」「WPF版クライアント」の3つが同時に起動されます。&#x0A;
  Windows Form/WPF いずれかお好みのクライアントをご利用ください。&#x0A;
  &#x0A;
  ※WebApiプロジェクトが先に起動し、ブラウザで「ASP.NET MVCのホーム画面」が表示されます。&#x0A;
  &#x0A;
  プログラム起動後は、WEB APIの配置場所を選択してください：&#x0A;
  [ローカル(IIS Express) / Azure Windows Server]&#x0A;
  
  配置場所と「出力帳票の種類」を選択後、「実行 (POST)」「実行 (GET)」ボタンをクリックすると&#x0A;
  WEB API (REST API)から印刷データを取得し、帳票出力を行います。&#x0A;"
         TextWrapping="Wrap" 
         BorderThickness="0"
         Background="Transparent"
         Padding="15" 
         FontSize="18"
         FontWeight="Bold"
         MaxHeight="500"
         VerticalScrollBarVisibility="Auto"/>
        </Border>

    </Grid>
</Window>