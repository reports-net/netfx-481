<Window x:Class="Sample.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report.net 使用例 － 実践！帳票サンプル集" 
        Height="700" Width="900" 
        WindowStartupLocation="CenterScreen"
        Background="#F8F8F8">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- 帳票タイプ選択コンボボックス（大きく目立つデザイン） -->
        <Border Grid.Row="0" Background="#FFFFFF" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15">
            <StackPanel Margin="15,10">
                <TextBlock Text="サンプル帳票を選択してください" FontSize="14" Foreground="#666666" Margin="0,0,0,8"/>
                <ComboBox x:Name="cmbReportType" FontSize="18" FontWeight="SemiBold" Padding="10,8" Height="50">
                    <ComboBoxItem Content="見積書 (四角で表を作成する手法・表紙と明細別デザイン・ハンコの印影出力)" IsSelected="True"/>
                    <ComboBoxItem Content="郵便番号一覧 (罫線で表を作成する手法・大量ページ・一覧のデザインを途中で変更・QRコード出力)"/>
                    <ComboBoxItem Content="請求書 (ほぼコードのみで帳票作成)"/>
                    <ComboBoxItem Content="商品大小分類 (グループごとに中間小計)"/>
                    <ComboBoxItem Content="いつでもデザイン変更 (データ再設定なしでデザイン変更)"/>
                    <ComboBoxItem Content="広告 (イメージPDF出力・装飾文字使用・画像出力)"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <Border x:Name="borderDesignSelection" Grid.Row="1" Background="#FFFFFF" BorderBrush="#CCCCCC" 
        BorderThickness="1" CornerRadius="4" Margin="0,0,0,15" Visibility="Collapsed">
            <StackPanel Margin="15,15">
                <TextBlock Text="デザインを選択してください" FontSize="14" Foreground="#666666" Margin="0,0,0,8"/>
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton x:Name="radDesign1" Content="デザイン1" 
                        GroupName="DesignGroup" IsChecked="True" 
                        Margin="0,0,30,0" FontSize="16" Padding="5,3"/>
                    <RadioButton x:Name="radDesign2" Content="デザイン2" 
                        GroupName="DesignGroup" 
                        Margin="0,0,0,0" FontSize="16" Padding="5,3"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- 出力タイプ選択（ラジオボタン） -->
        <Border Grid.Row="2" Background="#FFFFFF" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15">
            <StackPanel Margin="15,15">
                <TextBlock Text="出力方法を選択してください" FontSize="14" Foreground="#666666" Margin="0,0,0,12" 
                  HorizontalAlignment="Center"/>
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton x:Name="radPreview" Content="プレビュー" 
                        GroupName="OutputGroup" IsChecked="True" 
                        Margin="0,0,30,0" FontSize="16" Padding="5,3"/>
                    <RadioButton x:Name="radPrint" Content="印刷" 
                        GroupName="OutputGroup" 
                        Margin="0,0,30,0" FontSize="16" Padding="5,3"/>
                    <RadioButton x:Name="radPDF" Content="PDF出力" 
                        GroupName="OutputGroup" 
                        Margin="0,0,30,0" FontSize="16" Padding="5,3"/>
                    <RadioButton x:Name="radSVG" Content="SVG出力" 
                        GroupName="OutputGroup" 
                        Margin="0,0,30,0" FontSize="16" Padding="5,3"/>
                    <RadioButton x:Name="radXPS" Content="XPS出力" 
                        GroupName="OutputGroup" 
                        Margin="0,0,0,0" FontSize="16" Padding="5,3"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- 実行ボタン -->
        <Button Grid.Row="3" Content="実行" Width="150" 
        Background="#4B5F83" Foreground="White" 
        FontSize="16" FontWeight="SemiBold"
        BorderThickness="0" Margin="0,0,0,15"
        HorizontalAlignment="Center"
        Click="ExecuteButton_Click" Height="50"/>

        <!-- サンプルプログラム説明テキスト1 -->
        <Border Grid.Row="4" Background="#FFFDE7" BorderBrush="#FFECB3" 
        BorderThickness="1" CornerRadius="4" Margin="0,0,0,15">
            <TextBox x:Name="txtMessage1" 
         IsReadOnly="True" 
         Text="このプログラムは Windows Form のプログラムですが、
WPFのプロジェクトをスタートアップに設定すれば 同じ機能のWPF版を起動することができます。&#x0A;
&#x0A;
このサンプルプログラムでは、手軽にお試しいただける目的で、Excelファイルをデータベースとして使用しております。&#x0A;
そのため、Office 64bit版がインストールされている必要があります。"
         TextWrapping="Wrap" 
         BorderThickness="0"
         Background="Transparent"
         Padding="15" 
         FontSize="13"
         MaxHeight="180"
         VerticalScrollBarVisibility="Auto"/>
        </Border>

        <!-- Reports.net説明テキスト2 -->
        <Border Grid.Row="5" Background="#E1F5FE" BorderBrush="#B3E5FC" BorderThickness="1" CornerRadius="4" Margin="0,0,0,4">
            <TextBlock x:Name="txtMessage2"
           TextWrapping="Wrap"
           Padding="15"
           FontSize="13"
           Background="Transparent"
           >
  <Run Text="【学習リソースのご案内】&#x0A;
Reports.net の様々な活用方法について、動画や解説をご用意しております。&#x0A;
以下のコンテンツでは：&#x0A;
- 各種クラウド(Azure/AWS/GCP)上で動作するWEBアプリケーション開発&#x0A;
- LinuxやWindows環境での帳票出力方法&#x0A;
- 帳票作成WEB API(REST API)の構築と連携方法&#x0A;
- Reports.netを使った基本的な帳票作成の手順&#x0A;
&#x0A;
など、初心者から上級者まで役立つ情報を公開しています。&#x0A;
&#x0A;
【公式チャンネル】&#x0A;
- 動画サイト: " />
  <Hyperlink NavigateUri="https://www.youtube.com/@pao-jp"
             RequestNavigate="Hyperlink_RequestNavigate">
    https://www.youtube.com/@pao-jp
  </Hyperlink>
            </TextBlock>
        </Border>
    </Grid>
</Window>