<Window x:Class="Sample.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="780" Width="1000" WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <WrapPanel Grid.Row="0" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10">
                <RadioButton x:Name="radPreview_WPF" Content="WPF版プレビュー" GroupName="MyRadioGroup" Height="28" Width="164" FontSize="16" IsChecked="True" Margin="5"/>
                <RadioButton x:Name="radPreview_WPF_XPS" Content="XPS出力後WPFプレビュー(旧版)" GroupName="MyRadioGroup" Height="28" Width="250" FontSize="16" Margin="5"/>
                <RadioButton x:Name="radXPS" Content="XPS出力" GroupName="MyRadioGroup" Height="28" Width="98" FontSize="16" Margin="5"/>
            </WrapPanel>
            <WrapPanel Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10">
                <RadioButton x:Name="radPreview" Content="プレビュー" GroupName="MyRadioGroup" Height="28" Width="117" FontSize="16" Margin="5"/>
                <RadioButton x:Name="radPrint" Content="印刷" GroupName="MyRadioGroup" Height="28" Width="98" FontSize="16" Margin="5"/>
                <RadioButton x:Name="radPDF" Content="PDF出力" GroupName="MyRadioGroup" Height="28" Width="98" FontSize="16" Margin="5"/>
                <RadioButton x:Name="radSVG" Content="SVG出力" GroupName="MyRadioGroup" Height="28" Width="98" FontSize="16" Margin="5"/>
            </WrapPanel>

            <Button Grid.Row="2" Content="実行" Height="57" Width="102" Margin="5" HorizontalAlignment="Center" Click="Button_Click"/>
            <!-- リンクを追加 -->
            <TextBlock Grid.Row="3" HorizontalAlignment="Center" Margin="10" FontSize="14">
                <Run Text="※WPF版プレビューではお客様が自在にプレビュー画面をXAMLで変更できます。プレビュー画面デザインの変更方法については、"/>
                <Hyperlink NavigateUri="https://youtu.be/mFf64CehJEY" RequestNavigate="Hyperlink_RequestNavigate">
                    <Run Text="こちらの動画"/>
                </Hyperlink>
                <Run Text="をご覧ください。"/>
            </TextBlock>
            <DocumentViewer x:Name="documentViewer" Grid.Row="4" Margin="5" HorizontalAlignment="Stretch"/>
        </Grid>
    </ScrollViewer>
</Window>

